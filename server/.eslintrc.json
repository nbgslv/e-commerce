{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended",
        "plugin:node/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "graphql/template-strings": [
            "error",
            {
                "env": "apollo"
            }
        ]
    },
    "plugins": [
        "graphql",
        "prettier"
    ],
    "parser": "babel-eslint"
}